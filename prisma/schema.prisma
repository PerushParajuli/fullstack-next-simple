generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// ----------------------------------------------------------------------
/// Plant model (Internal)
/// ----------------------------------------------------------------------

model Plant {
  id String @id @default(uuid())

  name        String
  description String?
  category    String
  stock       Int
  price       Float

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // The Foreign Key column
  userId String

  imageUrl String?

  requestId String @unique // Prevents duplicate request
}