generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// ----------------------------------------------------------------------
/// Plant model (Internal) - model currently assumes ONE entry per product, not multiple.
/// ----------------------------------------------------------------------
model Plant {
  id          String   @id @default(uuid())
  name        String
  description String?
  category    String
  stock       Int
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  imageUrl    String?
  requestId   String   @unique

  @@unique([userId, name, category], name: "userId_name_category")
}
