generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas = ["public", "neon_auth"]
}

/// ----------------------------------------------------------------------
/// Plant model (Internal)
/// ----------------------------------------------------------------------

model Plant {
  id String @id @default(uuid())

  name        String
  description String?
  category    String
  stock       Int
  price       Float

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // The Foreign Key column
  userId String

  imageUrl String?
  @@schema("public") // ðŸš¨ Must explicitly state the schema
}